{
  "name": "loanjs",
  "version": "0.1.3",
  "main": "LoanJS.js",
  "description": "Calculate loan in js (browser/node.js) for equal installments, installments decreasing, the sum of interest, etc.",
  "homepage": "https://github.com/kfiku/LoanJS",
  "bugs": "https://github.com/kfiku/loanjs/issues",
  "author": {
    "name": "Grzegorz Klimek",
    "email": "kfiku.com@gmail.com",
    "url": "kfiku.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kfiku/loanjs"
  },
  "license": "MIT",
  "files": [
    "lib",
    "LoanJS.js"
  ],
  "keywords": [
    "loanjs",
    "nodejs",
    "loan",
    "calculator",
    "loan-calculator",
    "js",
    "installments",
    "intrerest"
  ],
  "devDependencies": {
    "@types/c3": "^0.4.37",
    "@types/node": "^6.0.46",
    "@types/numeral": "0.0.18",
    "browserify": "latest",
    "c3": "^0.4.11-rc4",
    "http-server": "^0.9.0",
    "jshint": "latest",
    "jstify": "^0.14.0",
    "live-reload": "^1.1.0",
    "lodash": "^4.5.1",
    "lodash.escape": "^4.0.0",
    "node-sass": "latest",
    "numeral": "^1.5.3",
    "opener": "^1.4.1",
    "parallelshell": "^2.0.0",
    "tsify": "^2.0.2",
    "tslint": "^3.5.0",
    "typescript": "^2.0.9",
    "watch": "^0.17.1"
  },
  "scripts": {
    "lint": "jshint scripts/*.js && tslint src/ts/**/*.ts ",
    "html": "node ./scripts/html.js",
    "html:prod": "node ./scripts/html.js prod",
    "watch:html": "watch 'npm run html' ./src/html",
    "ts": "browserify -d src/ts/main.ts -p tsify -t [ jstify --engine 'lodash-micro' --minifierOpts [ --collapseWhitespace 0 ] ] > dist/js/main.js",
    "ts:prod": "browserify src/ts/main.ts -p tsify -t [ jstify --engine 'lodash-micro' --minifierOpts [ --collapseWhitespace 0 ] ] > dist/js/main.js",
    "watch:ts": "watch 'npm run ts' ./src/ts ./src/tpl",
    "open:dev": "opener http://localhost:9090",
    "serve": "http-server -p 9090 ./",
    "live-reload": "live-reload --port 9091 ./dist",
    "dev": "parallelshell 'npm run live-reload' 'npm run serve' 'npm run watch:html' 'npm run watch:ts' 'npm run open:dev'",
    "prod": "npm run ts:prod && npm run html:prod"
  },
  "dependencies": {
    "interestjs": "0.1",
    "loanjs": "~0.1"
  },
  "engines": {
    "node": ">= 5.0"
  }
}
