{
  "name": "loanjs",
  "version": "0.1.3",
  "main": "LoanJS.js",
  "description": "Calculate loan in js (browser/node.js) for equal installments, installments decreasing, the sum of interest, etc.",
  "homepage": "https://github.com/kfiku/LoanJS",
  "bugs": "https://github.com/kfiku/loanjs/issues",
  "author": {
    "name": "Grzegorz Klimek",
    "email": "kfiku.com@gmail.com",
    "url": "kfiku.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kfiku/loanjs"
  },
  "license": "MIT",
  "files": [
    "lib",
    "LoanJS.js"
  ],
  "keywords": [
    "loanjs",
    "nodejs",
    "loan",
    "calculator",
    "loan-calculator",
    "js",
    "installments",
    "intrerest"
  ],
  "devDependencies": {
    "browserify": "latest",
    "http-server": "^0.9.0",
    "jshint": "latest",
    "jstify": "^0.14.0",
    "live-reload": "^1.1.0",
    "lodash": "^4.5.1",
    "lodash.escape": "^4.0.0",
    "node-sass": "latest",
    "opener": "^1.4.1",
    "parallelshell": "^2.0.0",
    "tsify": "^0.13.2",
    "watch": "^0.17.1"
  },
  "scripts": {
    "lint": "jshint scripts/*.js",
    "html": "node ./scripts/html.js",
    "html:prod": "node ./scripts/html.js prod",
    "watch:html": "watch 'npm run html' ./src/html",
    "ts": "browserify -d src/ts/main.ts -p tsify -t [ jstify --engine 'lodash-micro' --minifierOpts [ --collapseWhitespace 0 ] ] > dist/js/main.js",
    "watch:ts": "watch 'npm run ts' ./src/ts ./src/tpl",
    "open:dev": "opener http://localhost:9090",
    "serve": "http-server -p 9090 ./",
    "live-reload": "live-reload --port 9091 ./dist",
    "dev": "npm run open:dev -s & parallelshell 'npm run live-reload -s' 'npm run serve -s' 'npm run watch:html' 'npm run watch:ts'"
  },
  "dependencies": {
    "interestjs": "0.1",
    "loanjs": "~0.1"
  },
  "engines": {
    "node": ">= 5.0"
  }
}
